<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CrossGames.Controls">
    <Design.PreviewWith>
        <local:Cubebox
            Width="100"
            Height="100"
            Number="0" />
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type local:Cubebox}" TargetType="local:Cubebox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <ControlTemplate TargetType="local:Cubebox">
                <Border Background="{TemplateBinding BackgroundColor}" CornerRadius="10">
                    <Panel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="25"
                            FontWeight="Bold"
                            Text="{TemplateBinding Number}" />
                    </Panel>
                    <Border.Transitions>
                        <Transitions>
                            <BrushTransition Property="Background" Duration="0:0:0.2" />
                        </Transitions>
                    </Border.Transitions>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>